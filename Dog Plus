              onClick={() => setSubTab('policies')}
              className={`px-8 py-4 font-bold uppercase tracking-widest text-sm transition-all border-b-2 ${
                subTab === 'policies' ? 'border-[#4B0082] text-[#4B0082]' : 'border-transparent text-gray-400 hover:text-gray-600'
              }`}
            >
              Policies
            </button>
            <button 
              onClick={() => setSubTab('faq')}
              className={`px-8 py-4 font-bold uppercase tracking-widest text-sm transition-all border-b-2 ${
                subTab === 'faq' ? 'border-[#4B0082] text-[#4B0082]' : 'border-transparent text-gray-400 hover:text-gray-600'
              }`}
            >
              FAQ
            </button>
          </div>
        </RevealOnScroll>

        <RevealOnScroll className="bg-[#F8F5FA] p-8 md:p-16">
          {subTab === 'policies' ? (
            <div className="space-y-12 animate-in fade-in slide-in-from-bottom-4">
              {[
                { title: "Cancellation Policy", text: "We require 24 hours notice for all cancellations. Appointments cancelled with less than 24 hours notice will incur a fee of 50% of the service price." },
                { title: "Aggressive Dog Policy", text: "We reserve the right to refuse service to pets with severe aggression. If we cannot safely groom your pet, we will stop the service and charge only for the portion completed." },
                { title: "Matting Policy", text: "We prioritize humanity over vanity. We will not brush out severe matting as it is painful. Matted coats will be shaved to start fresh, and a shave-down fee may apply." }
              ].map((p, i) => (
                <div key={i}>
                  <h3 className="text-xl font-bold text-[#4B0082] mb-3 uppercase tracking-wide">{p.title}</h3>
                  <p className="text-gray-600 font-light leading-relaxed">{p.text}</p>
                </div>
              ))}
            </div>
          ) : (
            <div className="space-y-8 animate-in fade-in slide-in-from-bottom-4">
              {[
                { q: "What areas do you serve?", a: "We serve the greater metropolitan area within a 15-mile radius of the city center." },
                { q: "Do I need to be home?", a: "For the first appointment, yes. Once we have established a relationship, we can arrange latch-key service." },
                { q: "How long does it take?", a: "Most appointments take between 1 to 2 hours depending on the size of the dog and coat condition." }
              ].map((f, i) => (
                <div key={i} className="border-b border-gray-200 pb-8 last:border-0">
                  <h3 className="text-lg font-bold text-gray-800 mb-2">{f.q}</h3>
                  <p className="text-gray-500 font-light">{f.a}</p>
                </div>
              ))}
            </div>
          )}
        </RevealOnScroll>
      </div>
    </div>
  );
};

