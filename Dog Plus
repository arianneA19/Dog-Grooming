import React, { useState, useEffect, useRef } from 'react';
import { 
  Dog, 
  ShowerHead, 
  Home, 
  CheckCircle, 
  Camera, 
  Info, 
  Mail, 
  Phone, 
  MapPin, 
  Menu, 
  X, 
  ExternalLink,
  ShieldCheck,
  Scissors,
  Truck,
  CalendarCheck,
  ChevronRight,
  Star,
  Heart
} from 'lucide-react';

// --- Scroll Animation Component ---
const RevealOnScroll = ({ children, className = "", delay = 0 }) => {
  const [isVisible, setIsVisible] = useState(false);
  const ref = useRef(null);

  useEffect(() => {
    const observer = new IntersectionObserver(
      ([entry]) => {
        if (entry.isIntersecting) {
          setIsVisible(true);
          observer.unobserve(entry.target);
        }
      },
      {
        threshold: 0.1,
        rootMargin: "0px 0px -50px 0px"
      }
    );

    if (ref.current) {
      observer.observe(ref.current);
    }

    return () => {
      if (ref.current) {
        observer.unobserve(ref.current);
      }
    };
  }, []);

  return (
    <div
      ref={ref}
      style={{ transitionDelay: `${delay}ms` }}
      className={`transition-all duration-1000 ease-out transform ${
        isVisible 
          ? "opacity-100 translate-y-0" 
          : "opacity-0 translate-y-12"
      } ${className}`}
    >
      {children}
    </div>
  );
};

const App = () => {
  const [activePage, setActivePage] = useState('home');
  const [isMenuOpen, setIsMenuOpen] = useState(false);
  const [scrolled, setScrolled] = useState(false);

  // Theme Colors - Deep Royal Purple & Elegant Black/White
  const colors = {
    primary: 'bg-[#4B0082]', // Deep Royal Purple
    primaryText: 'text-[#4B0082]',
    primaryBorder: 'border-[#4B0082]',
    secondary: 'bg-[#F8F5FA]', // Very light purple/white off-white
    accent: 'text-[#D8BFD8]', // Thistle/Light Purple for accents on dark backgrounds
    black: 'bg-black',
    white: 'bg-white'
  };

  // Handle scroll for navbar styling
  useEffect(() => {
    const handleScroll = () => {
      setScrolled(window.scrollY > 50);
    };
    window.addEventListener('scroll', handleScroll);
    return () => window.removeEventListener('scroll', handleScroll);
  }, []);

  const navLinks = [
    { id: 'home', label: 'Home' },
    { id: 'why-us', label: 'Why Us' },
    { id: 'services', label: 'Services' },
    { id: 'photos', label: 'Gallery' },
    { id: 'additional-info', label: 'Info' },
    { id: 'contact', label: 'Contact' },
  ];

  const renderPage = () => {
    switch (activePage) {
      case 'home': return <HomePage setActivePage={setActivePage} colors={colors} />;
      case 'why-us': return <WhyUsPage colors={colors} />;
      case 'services': return <ServicesPage colors={colors} />;
      case 'photos': return <PhotosPage colors={colors} />;
      case 'additional-info': return <AdditionalInfoPage colors={colors} />;
      case 'contact': return <ContactPage colors={colors} />;
      default: return <HomePage setActivePage={setActivePage} colors={colors} />;
    }
  };

  return (
    <div className="min-h-screen flex flex-col font-sans text-gray-900 bg-white selection:bg-[#4B0082] selection:text-white">
      
      {/* Navigation - Elegant & Sticky */}
      <nav className={`fixed top-0 w-full z-50 transition-all duration-300 ${
        scrolled ? 'bg-white/95 backdrop-blur-md shadow-md py-2' : 'bg-transparent py-6'
      }`}>
        <div className="max-w-7xl mx-auto px-6">
          <div className="flex justify-between items-center">
            
            {/* Logo */}
            <div 
              className="flex items-center space-x-2 cursor-pointer z-50" 
              onClick={() => setActivePage('home')}
            >
              <div className={`${scrolled ? 'bg-[#4B0082]' : 'bg-white'} p-2 rounded-full transition-colors duration-300`}>
                <Dog className={`${scrolled ? 'text-white' : 'text-[#4B0082]'} w-6 h-6`} />
              </div>
              <span className={`text-2xl font-bold tracking-tighter ${scrolled ? 'text-[#4B0082]' : 'text-white shadow-black drop-shadow-md'}`}>
                DOG<span className={scrolled ? 'text-black' : 'text-purple-200'}>+</span>PLUS
              </span>
            </div>

            {/* Desktop Nav */}
            <div className="hidden lg:flex items-center space-x-8">
              {navLinks.map(link => (
                <button
                  key={link.id}
                  onClick={() => setActivePage(link.id)}
                  className={`text-sm font-bold tracking-wide uppercase transition-all hover:tracking-wider ${
                    scrolled 
                      ? (activePage === link.id ? 'text-[#4B0082]' : 'text-gray-600 hover:text-[#4B0082]') 
                      : (activePage === link.id ? 'text-white border-b-2 border-white' : 'text-white/90 hover:text-white')
                  }`}
                >
                  {link.label}
                </button>
              ))}
              <a 
                href="https://barklet.com" 
                target="_blank" 
                rel="noopener noreferrer"
                className={`px-6 py-2 rounded-full text-sm font-bold uppercase tracking-wider transition-transform hover:scale-105 ${
                  scrolled 
                    ? 'bg-[#4B0082] text-white hover:bg-black' 
                    : 'bg-white text-[#4B0082] hover:bg-gray-100'
                }`}
              >
                Book Now
              </a>
            </div>

            {/* Mobile Menu Toggle */}
            <button 
              onClick={() => setIsMenuOpen(!isMenuOpen)} 
              className={`lg:hidden p-2 z-50 ${scrolled ? 'text-black' : 'text-white'}`}
            >
              {isMenuOpen ? <X size={32} className="text-black fixed right-6 top-6" /> : <Menu size={32} />}
            </button>
          </div>
        </div>

        {/* Full Screen Mobile Menu */}
        <div className={`fixed inset-0 bg-white z-40 transform transition-transform duration-500 ease-in-out ${isMenuOpen ? 'translate-x-0' : 'translate-x-full'}`}>
          <div className="h-full flex flex-col justify-center items-center space-y-8 p-8">
            {navLinks.map(link => (
              <button
                key={link.id}
                onClick={() => {
                  setActivePage(link.id);
                  setIsMenuOpen(false);
                }}
                className="text-3xl font-black text-[#4B0082] hover:text-black transition-colors"
              >
                {link.label}
              </button>
            ))}
            <a 
              href="https://barklet.com" 
              target="_blank" 
              rel="noopener noreferrer"
              className="mt-8 px-10 py-4 bg-black text-white rounded-full text-xl font-bold"
            >
              Book Appointment
            </a>
          </div>
        </div>
      </nav>

      <main className="flex-grow">
        {renderPage()}
      </main>

      {/* Boutique Footer */}
      <footer className="bg-[#4B0082] text-white pt-20 pb-10">
        <div className="max-w-7xl mx-auto px-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 border-b border-purple-800 pb-12 mb-12">
          <div className="space-y-6">
            <h3 className="text-2xl font-bold flex items-center gap-2">
              DOG<span className="text-purple-300">+</span>PLUS
            </h3>
            <p className="text-purple-200 text-sm leading-relaxed max-w-xs">
              Redefining pet care with mobile luxury grooming and boutique boarding services. Because they aren't just pets, they're family.
            </p>
          </div>
          
          <div>
            <h4 className="font-bold mb-6 text-sm uppercase tracking-widest text-purple-300">Services</h4>
            <ul className="space-y-3 text-sm text-purple-100">
              <li className="hover:text-white cursor-pointer transition-colors">Mobile Spa</li>
              <li className="hover:text-white cursor-pointer transition-colors">Boutique Boarding</li>
              <li className="hover:text-white cursor-pointer transition-colors">Daycare Play</li>
              <li className="hover:text-white cursor-pointer transition-colors">Wellness Add-ons</li>
            </ul>
          </div>

          <div>
            <h4 className="font-bold mb-6 text-sm uppercase tracking-widest text-purple-300">Company</h4>
            <ul className="space-y-3 text-sm text-purple-100">
              <li className="hover:text-white cursor-pointer transition-colors" onClick={() => setActivePage('why-us')}>Why Choose Us</li>
              <li className="hover:text-white cursor-pointer transition-colors" onClick={() => setActivePage('additional-info')}>Policies</li>
              <li className="hover:text-white cursor-pointer transition-colors" onClick={() => setActivePage('additional-info')}>FAQ</li>
              <li className="hover:text-white cursor-pointer transition-colors" onClick={() => setActivePage('contact')}>Contact</li>
            </ul>
          </div>

          <div>
            <h4 className="font-bold mb-6 text-sm uppercase tracking-widest text-purple-300">Stay Connected</h4>
            <div className="space-y-4 text-sm text-purple-100">
              <p className="flex items-center gap-3"><Phone size={16} /> (555) 123-PAWS</p>
              <p className="flex items-center gap-3"><Mail size={16} /> hello@dogplus.com</p>
              <div className="pt-4">
                 <a href="https://barklet.com" className="inline-block bg-white text-[#4B0082] px-6 py-2 rounded-full font-bold text-xs uppercase tracking-widest hover:bg-purple-100 transition-colors">Book Now</a>
              </div>
            </div>
          </div>
        </div>
        <div className="max-w-7xl mx-auto px-6 flex flex-col md:flex-row justify-between items-center text-xs text-purple-300">
          <p>© {new Date().getFullYear()} Dog Plus LLC. All rights reserved.</p>
          <div className="flex space-x-6 mt-4 md:mt-0">
            <span>Privacy Policy</span>
            <span>Terms of Service</span>
          </div>
        </div>
      </footer>
    </div>
  );
};

